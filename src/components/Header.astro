---
import logo from '../imagenes/logo.jpg';
---
<header class="bg-gray-900/80 backdrop-blur-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-white font-extrabold text-2xl md:text-3xl flex items-center neon-text">
          <img src={logo.src} alt="Sistemas Anich Logo" class="h-8 w-8 rounded-full inline-block mr-3" />
          <span>Sistemas Anich</span>
        </a>
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="#servicios" class="text-neon-blue hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-bold transition-colors duration-200">Servicios</a>
          <a href="#galeria" class="text-neon-pink hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-bold transition-colors duration-200">Galería</a>
          <a href="#testimonios" class="text-neon-green hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-bold transition-colors duration-200">Testimonios</a>
          <a href="#contacto" class="text-neon-violet hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-bold transition-colors duration-200">Contacto</a>
        </div>
      </div>
      <!-- Mobile menu button -->
      <div class="-mr-2 flex md:hidden">
        <button type="button" id="mobile-menu-button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Abrir menú principal</span>
          <svg id="menu-icon-open" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-icon-close" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="md:hidden hidden transition-all duration-300 ease-in-out" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="#servicios" class="text-neon-blue hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-bold transition-colors duration-200">Servicios</a>
      <a href="#galeria" class="text-neon-pink hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-bold transition-colors duration-200">Galería</a>
      <a href="#testimonios" class="text-neon-green hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-bold transition-colors duration-200">Testimonios</a>
      <a href="#contacto" class="text-neon-violet hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-bold transition-colors duration-200">Contacto</a>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    const openIcon = document.getElementById('menu-icon-open');
    const closeIcon = document.getElementById('menu-icon-close');

    if (btn && menu && openIcon && closeIcon) {
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        openIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });

      const links = menu.querySelectorAll('a');
      links.forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.add('hidden');
          openIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        });
      });
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
  #mobile-menu {
    opacity: 0;
    transform: translateY(-10px);
    pointer-events: none;
    transition: opacity 0.3s, transform 0.3s;
  }
  #mobile-menu:not(.hidden) {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }
  .neon-text {
    color: #fff;
    text-shadow:
      0 0 8px #0ff,
      0 0 16px #0ff,
      0 0 32px #0ff,
      0 0 64px #0ff;
  }
  .text-neon-blue {
    color: #00eaff;
    text-shadow:
      0 0 6px #00eaff,
      0 0 12px #00eaff;
  }
  .text-neon-pink {
    color: #ff3ec8;
    text-shadow:
      0 0 6px #ff3ec8,
      0 0 12px #ff3ec8;
  }
  .text-neon-green {
    color: #39ff14;
    text-shadow:
      0 0 6px #39ff14,
      0 0 12px #39ff14;
  }
  .text-neon-violet {
    color: #a259ff;
    text-shadow:
      0 0 6px #a259ff,
      0 0 12px #a259ff;
  }
</style>