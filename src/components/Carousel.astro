---
import type { ImageMetadata } from 'astro';

const { images, title } = Astro.props as { images: ImageMetadata[]; title: string };
---

<div class="bg-gray-900 py-12 sm:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold font-poppins text-center text-white mb-8">{title}</h2>
    <div class="relative overflow-hidden">
      <div class="flex overflow-x-auto snap-x snap-mandatory scrollbar-thin scrollbar-thumb-neon-green scrollbar-track-gray-800 pb-4">
        {images.map((image, index) => (
          <div class="snap-center flex-shrink-0 w-4/5 sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 p-2">
            <img
              src={image.src}
              alt={`${title} ${index + 1}`}
              class="w-full h-64 object-cover rounded-lg shadow-lg transform transition-transform duration-300 hover:scale-105"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>