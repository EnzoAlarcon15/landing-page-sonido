---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Carousel from '../components/Carousel.astro';
import Services from '../components/Services.astro';
import Testimonials from '../components/Testimonials.astro';
import Footer from '../components/Footer.astro';

// Importar imágenes para que Astro las procese
import casamientoImg from '../imagenes/casamiento.jpg';
import casamiento01Img from '../imagenes/casamiento01.jpg';
import casamiento02Img from '../imagenes/casamiento02.jpg';
import casamiento03Img from '../imagenes/casamiento 03.jpg';
import casamiento04Img from '../imagenes/casamiento04.jpg';

import cumpleanosImg from '../imagenes/cumpleaños.jpg';
import cumpleanos01Img from '../imagenes/cumpleaños 01.jpg';
import cumpleanos03Img from '../imagenes/cumpleaños 03.jpg';
import cumpleanosNelsonImg from '../imagenes/cumpleaños nelson.jpg';
import cumpleanosNelson01Img from '../imagenes/cumpleaños nelson01.jpg';

import fiestaImg from '../imagenes/fiesta de educacion fisica.jpg';
import fiesta01Img from '../imagenes/fiesta de educacion fisica01.jpg';
import fiesta02Img from '../imagenes/fiesta de educacion fisica02.jpg';
import fiesta03Img from '../imagenes/fiesta de educacion fisica03.jpg';

import sonidoImg from '../imagenes/sonido.jpg';
import sonidoFotoImg from '../imagenes/sonido foto.jpg';

// Imágenes agrupadas por categoría
const casamientosImages = [
  casamientoImg,
  casamiento01Img,
  casamiento02Img,
  casamiento03Img,
  casamiento04Img,
];

const cumpleanosImages = [
  cumpleanosImg,
  cumpleanos01Img,
  cumpleanos03Img,
  cumpleanosNelsonImg,
  cumpleanosNelson01Img,
];

const fiestasImages = [fiestaImg, fiesta01Img, fiesta02Img, fiesta03Img];

const sonidoImages = [sonidoImg, sonidoFotoImg];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Sistemas Anich - Alquiler de Sonido, DJ y Animador</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Poppins:wght@700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-white">
    <Header />
    <Hero />
    <div id="servicios"><Services /></div>
    <div id="galeria">
      <Carousel title="Casamientos" images={casamientosImages} />
      <Carousel title="Cumpleaños" images={cumpleanosImages} />
      <Carousel title="Fiestas y Eventos" images={fiestasImages} />
      <Carousel title="Nuestro Sonido" images={sonidoImages} />
    </div>
    <div id="testimonios"><Testimonials /></div>
    <div id="contacto"><Footer /></div>
  </body>
</html>